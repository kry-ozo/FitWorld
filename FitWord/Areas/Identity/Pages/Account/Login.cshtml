@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="">
        <section class="login">
            <form id="account" method="post" class="container-md">
                <div class="div-input">
                    <h2 class=" t-primary pb-3 login-header my-5">Log in to your Account</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                </div>
                <div class="form-floating mb-3 div-input ">
                    <input asp-for="Input.Email" class="form-control input-text t-primary" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label t-primary">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 div-input">
                    <input asp-for="Input.Password" class="form-control input-text t-primary" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label t-primary">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3 div-input">
                    <label asp-for="Input.RememberMe" class="form-label t-primary">
                        <input class="form-check-input " asp-for="Input.RememberMe" class="bg-dark" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="my-3 div-input">
                    <button id="login-submit" type="submit" class="button-primary btn btn-lg">Log in</button>
                </div>
                <div class="mt-5 div-input">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="t-primary">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="t-primary">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="t-primary">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
